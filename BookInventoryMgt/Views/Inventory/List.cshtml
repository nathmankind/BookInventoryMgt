@model List<Inventory>

@{
	ViewData["Title"] = "All Books";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">Book Inventory Information List</h3>

    <!-- Filter Section -->

    <div class="row g-2 mb-3">
        <div class="row col-md-8 col-xs-12 my-xs-2">
            <form method="get" class="row col-md-12" asp-action="FilterFromInventory" asp-controller="Inventory">
                <div class="col-md-8 col-xs-12">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search by title, author..." value="@ViewData["searchQuery"]" />
                   
                </div>
                <div class="col-md-4 col-xs-12 my-xs-2">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </form>
        </div>
        <!-- Export Button -->

        <div class="row col-md-4 col-sm-12 justify-content-end flex-md-grow-1">
            <a class="btn btn-success w-auto mx-md-2" asp-action="ExportToCsv" asp-controller="Inventory">
                <i class="fas fa-file-export me-1"></i> Export to CSV
            </a>
            <a class="btn btn-primary w-auto" asp-action="GetAddBookToInventoryRequest" asp-controller="Inventory">
                <i class="fas fa-plus me-2"></i> Add Book
            </a>
        </div>
    </div>


  
    <!-- Table -->
    <div class="table-responsive">
        <table id="dataTable" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>ISBN</th>
                    <th>Publication Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Inventory book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Genre</td>
                        <td>@book.ISBN</td>
                        <td>@book.PublicationDate.ToString("dd-mm-yyyy")</td>
                    </tr>
                }
                <td class="p-5 text-center" colspan="5">No data available </td>
            </tbody>
        </table>
    </div>

    <div class="d-block d-sm-none">

        @foreach(var book in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">
                        <strong>Author:</strong> @book.Author <br>
                        <strong>Genre:</strong> @book.Genre <br>
                        <strong>Publication Date:</strong> @book.PublicationDate.ToString("mm-dd-yyyy") <br>
                        <strong>ISBN:</strong> @book.ISBN
                    </p>
                </div>
            </div>
        }
        

    </div>
</div>